<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Create New Category </h5>
        <div class="card-body">
            <form name="category" method="post">
                <div class="form-group">
                    <label for="category_parentid">Parentid </label>
                    <select id="category_parentid" name="category[parentid]" class="form-control"> <i class="fas fa-chevron-down"></i>
                        <option value="0"> Main Category </option>
                        {% for cat in categories %}
                            <option value="{{ cat.id  }}" {{ cat.id==category.parentid ? 'Selected': '' }} > {{ cat.title }}</option>
                        {% endfor %}
                    </select>



                </div>
                <div class="form-group">

                    <label for="category_title">Title</label>
                    <input id="category_title" name="category[title]" type="text"  value="{{ category.title }}"class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Keywords</label>
                    <input id="category_keywords" name="category[keywords]" value="{{ category.keywords }}" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="inputRepeatPassword">Description</label>
                    <input id="category_description" name="category[description]" value="{{ category.description }}"  class="form-control">
                </div>
                <div class="form-group">

                    <label for="category_status">Status</label>
                    <select id="category_status" name="category[status]" class="form-control" >
                        <option > {{ category.status }} </option>
                        <option> True</option>
                        <option> False </option>
                    </select>
                </div>
                <button type="submit" class="btn btn-rounded btn-success">Save</button>
            </form>
        </div>
    </div>
</div>