{% extends 'adminbase.html.twig' %}

{% block title %}Edit Category Page{% endblock %}

{% block body %}
    <!-- wrapper  -->
    <!-- ============================================================== -->
    <div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">





                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ message.name }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ message.email }}</td>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <td>{{ message.subject }}</td>
                    </tr>
                    <tr>
                        <th>Messages</th>
                        <td>{{ message.messages }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ message.status }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_messages_index') }}"class="btn btn-rounded btn-primary">Back to List</a>

                <a href="{{ path('admin_messages_edit', {'id': message.id}) }}"class="btn btn-rounded btn-success">Edit</a>

                {{ include('admin/messages/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}