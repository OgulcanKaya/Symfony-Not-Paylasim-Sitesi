{% extends 'adminbase.html.twig' %}

{% block title %}Edit Category Page{% endblock %}

{% block body %}
<!-- wrapper  -->
<!-- ============================================================== -->
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">


                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Messages</th>
                        <th>Ip</th>
                        <th>Status</th>
                        <th>actions</th>
                        <th>actions</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.id }}</td>
                            <td>{{ message.name }}</td>
                            <td>{{ message.email }}</td>
                            <td>{{ message.subject }}</td>
                            <td>{{ message.messages }}</td>
                            <td>{{ message.p }}</td>
                            <td>{{ message.status }}</td>
                            <td>
                                <a href="{{ path('admin_messages_show', {'id': message.id}) }} "class="btn btn-rounded btn-primary">Show</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_messages_edit', {'id': message.id}) }} "class="btn btn-rounded btn-success">Edit</a>
                            </td>
                            <td>
                                {{ include('admin/messages/_delete_form.html.twig') }}

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
