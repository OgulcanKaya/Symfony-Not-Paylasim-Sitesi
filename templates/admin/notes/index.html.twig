{% extends 'adminbase.html.twig' %}

{% block title %}Notes Page{% endblock %}

{% block body %}

<SCRIPT language="JavaScript" type="text/javascript">

    function openWin(windowURL,windowName,windowFeatures) {window.open(windowURL,windowName,windowFeatures);}

</SCRIPT>

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">


                <h1>Notes Page</h1>

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category</th>
                        <th>University</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Pdf</th>
                        <th>Image</th>
                        <th>Status</th>
                        <th>Galery</th>
                        <th>actions</th>
                        <th>actions</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for note in notes %}
                        <tr>
                            <td>{{ note.id }}</td>
                            <td><a href="{{ path('admin_category_show' ,{'id': note.category_id}) }}">{{ note.catname }}</a></td>
                            <td><a href="{{ path('admin_university_show' ,{'id': note.university_id}) }}"> {{ note.uniname }} </a> </td>
                            <td><a href="{{ path('admin_user_show' ,{'id': note.userid}) }}"> {{ note.name }}  {{ note.surname }} </a> </td>
                            <td>{{ note.title }}</td>
                            <td><a href="{{ asset ('uploads/pdf/' ~note.pdf)}}"> Burdan indirebilirsiniz!</a></td>
                            <td>
                                <img src="{{ asset ('uploads/images/' ~note.image) }}" height="40">
                            </td>

                            <td>{{ note.status }}</td>
                            <td><a href="javascript:openWin('{{ path('admin_image_new' ,{'id':note.id}) }}' , ' ' , 'toolbar=no,location=no,directories=0,status=0,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                               <img src="{{ asset('assets/admin/images') }}/galery.png" height="50">
                                </a>
                            </td>

                            <td>
                                <a href="{{ path('admin_notes_show', {'id': note.id}) }} " class="btn btn-rounded btn-primary"> Show</a>

                            </td>
                            <td>

                                <a href="{{ path('admin_notes_edit', {'id': note.id}) }}" class="btn btn-rounded btn-success">Edit</a>

                            </td>
                            <td>

                                {{ include('admin/notes/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('admin_notes_new') }}"class="btn btn-rounded btn-info">Create New Notes</a>


            </div>
        </div>
    </div>

    {% endblock %}