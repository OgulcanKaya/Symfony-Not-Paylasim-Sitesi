{% extends 'adminbase.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
<!-- wrapper  -->
<!-- ============================================================== -->
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <h1>University</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ university.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ university.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ university.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ university.country }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ university.createdAt ? university.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ university.updatedAt ? university.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_university_index') }}"class="btn btn-rounded btn-primary">Back to List</a>

    <a href="{{ path('admin_university_edit', {'id': university.id}) }}"class="btn btn-rounded btn-success">Edit</a>

    {{ include('admin/university/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    {% endblock %}