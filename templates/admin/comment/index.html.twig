{% extends 'adminbase.html.twig' %}

{% block title %}Comments Page{% endblock %}

{% block body %}

    <div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1>Comment index</h1>

                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Subject</th>
                        <th>Comment</th>
                        <th>Status</th>
                        <th>Ip</th>
                        <th>Userid</th>
                        <th>Noteid</th>
                        <th>Rate</th>
                        <th>actions</th>
                        <th>actions</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.id }}</td>
                            <td>{{ comment.subject }}</td>
                            <td>{{ comment.comment }}</td>
                            <td>{{ comment.status }}</td>
                            <td>{{ comment.ip }}</td>
                            <td><a href="{{ path('admin_user_show', {'id': comment.userid}) }}"> {{ comment.name }} {{ comment.surname }} </a></td>
                            <td><a href="{{ path('admin_notes_show', {'id': comment.noteid}) }}"> {{ comment.title }} </a></td>
                            <td>{{ comment.rate }}</td>
                            <td>
                                <a href="{{ path('admin_comment_show', {'id': comment.id}) }}"class="btn btn-rounded btn-primary"> Show</a>
                            </td>
                            <td>
                                <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"class="btn btn-rounded btn-success">Edit</a>
                            </td>
                            <td>
                                {{ include('admin/comment/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


            </div>
        </div>
    </div>

{% endblock %}