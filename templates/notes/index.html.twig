{% extends 'homebase.html.twig' %}

{% block title %} {{ app.user.name }} Notes{% endblock %}

{% block body %}

    <SCRIPT language="JavaScript" type="text/javascript">

        function openWin(windowURL,windowName,windowFeatures) {window.open(windowURL,windowName,windowFeatures);}

    </SCRIPT>


    <section id="single-page-header">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-left">
                            <h2>My Notes</h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-right">
                            <ol class="breadcrumb">
                                <li><a href="/user">My Profile</a></li>
                                <li class="active">My Notes</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="blog-archive">
        <div class="container">
            <div class="row">
                <div class="col-md-15">
                    <div class="blog-archive-area">
                        <div class="row">
                            <div class="col-md-2 hidden-sm hidden-xs">
                                <aside class="blog-side-bar">

                                    {% include('user/usermenu.html.twig') %}
                                </aside>
                            </div>
                            <div class="col-md-10">
                                <div class="blog-archive-left">
                                    <!-- Start blog news single -->
                                    <article class="blog-news-single">

                                        <div class="blog-news-title">
                                            <h2>Your Notes</h2>
                                            <div class="blog-news-details blog-single-details">

                                                <table class="table table-bordered">
                                                    <thead>
                                                    <tr>
                                                        <th>Id</th>
                                                        <th>University</th>
                                                        <th>Title</th>
                                                        <th>Pdf</th>
                                                        <th>Image</th>
                                                        <th>Status</th>
                                                        <th>Galery</th>
                                                        <th>actions</th>
                                                        <th>actions</th>
                                                        <th>actions</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% for note in notes %}
                                                        <tr>
                                                            <td>{{ note.id }}</td>
                                                            <td>{{ note.university.name}}</td>
                                                            <td>{{ note.title }}</td>
                                                            <td><a href="{{ asset ('uploads/pdf/' ~note.pdf)}}"> Burdan Bakabilirsiniz!</a>
                                                            </td>
                                                            <td>
                                                                <img src="{{ asset ('uploads/images/' ~note.image) }}" height="40">
                                                            </td>
                                                            <td>{{ note.status }}</td>
                                                            <td><a href="javascript:openWin('{{ path('user_image_new' ,{'id':note.id}) }}' , ' ' , 'toolbar=no,location=no,directories=0,status=0,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                                                    <img src="{{ asset('assets/admin/images') }}/galery.png" height="50">
                                                                </a>
                                                            </td>

                                                            <td>
                                                                <a href="{{ path('user_notes_show', {'id': note.id}) }} " class="btn btn-rounded btn-primary"> Show</a>

                                                            </td>
                                                            <td>

                                                                <a href="{{ path('user_notes_edit', {'id': note.id}) }}" class="btn btn-rounded btn-success">Edit</a>

                                                            </td>
                                                            <td>

                                                                {{ include('notes/_delete_form.html.twig') }}
                                                            </td>
                                                        </tr>
                                                    {% else %}
                                                        <tr>
                                                            <td colspan="10">no records found</td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>

                                                <a href="{{ path('user_notes_new') }}"class="btn btn-rounded btn-info">Create New Notes</a>


                                            </div>
                                        </div>


                                    </article>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}
