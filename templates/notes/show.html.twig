{% extends 'homebase.html.twig' %}

{% block title %} {{ app.user.name }} Notes{% endblock %}

{% block body %}




    <section id="single-page-header">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-left">
                            <h2>My Notes</h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-right">
                            <ol class="breadcrumb">
                                <li><a href="/user">My Profile</a></li>
                                <li class="active">My Notes</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="blog-archive">
        <div class="container">
            <div class="row">
                <div class="col-md-15">
                    <div class="blog-archive-area">
                        <div class="row">
                            <div class="col-md-2 hidden-sm hidden-xs">
                                <aside class="blog-side-bar">

                                    {% include('user/usermenu.html.twig') %}
                                </aside>
                            </div>
                            <div class="col-md-10">
                                <div class="blog-archive-left">
                                    <!-- Start blog news single -->
                                    <article class="blog-news-single">

                                        <div class="blog-news-title">
                                            <h2>Your Notes</h2>
                                            <div class="blog-news-details blog-single-details">




                                                <table class="table">
                                                    <tbody>
                                                    <tr>
                                                        <th>Id</th>
                                                        <td>{{ note.id }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>University</th>
                                                        <td>{{ note.university.name }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Title</th>
                                                        <td>{{ note.title }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Keywords</th>
                                                        <td>{{ note.keywords }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Description</th>
                                                        <td>{{ note.description }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Pdf</th>
                                                        <td><a href="{{ asset ('uploads/pdf/' ~note.pdf)}}"> Burdan indirebilirsiniz</a></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Image</th>
                                                        <td><img src="{{ asset ('uploads/images/' ~note.image) }}" height="100"></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Status</th>
                                                        <td>{{ note.status }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Season_at</th>
                                                        <td>{{ note.seasonAt ? note.seasonAt|date('Y-m-d H:i:s') : '' }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Created_at</th>
                                                        <td>{{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Updated_at</th>
                                                        <td>{{ note.updatedAt ? note.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                                    </tr>
                                                    </tbody>
                                                </table>

                                                <a href="{{ path('user_notes_index') }}"class="btn btn-rounded btn-primary">Back to List</a>

                                                <a href="{{ path('user_notes_edit', {'id': note.id}) }}"class="btn btn-rounded btn-success">Edit</a>

                                                {{ include('notes/_delete_form.html.twig') }}





                                            </div>
                                        </div>


                                    </article>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}




