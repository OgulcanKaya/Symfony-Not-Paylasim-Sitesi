{% extends 'homebase.html.twig' %}

{% block title %}{{ setting[0].title }}{% endblock %}
{% block keywords %} {{ setting[0].keywords }}{% endblock %}
{% block description %} {{ setting[0].description }} {% endblock %}

{% block body %}
    <section id="single-page-header">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-left">
                            <h2></h2>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="single-page-header-right">
                            <ol class="breadcrumb">
                                <li><a href="/">Home Page</a></li>
                                <li class="active">Contact Us</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Start contact section  -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <h2 class="title">Contact Us</h2>
                        <span class="line"></span>
                        <p>{{ setting[0].title }}</p>
                    </div>
                </div>


                {{ include('messages.html.twig')}}


                <div class="col-md-12">
                    <div class="cotact-area">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="contact-area-left">
                                    <h4>Contact Info</h4>
                                    <p>{{ setting[0].contact |raw}}</p>
                                    <div class="footer-right contact-social">
                                        <a href="{{ setting[0].twitter}}"><i class="fa fa-twitter"></i></a>
                                        <a href="{{ setting[0].instagram}}"><i class="fa fa-instagram"></i></a>
                                        <a href="{{ setting[0].twitter}}"><i class="fa fa-facebook"></i></a>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="contact-area-right">
                                    <form method="post" name="messages" class="comments-form contact-form">
                                        <div class="form-group">
                                            <input type="text" id="messages_name" name="messages[name]" class="form-control" placeholder="Your Name">
                                        </div>
                                        <div class="form-group">
                                            <input type="email" id="messages_email" name="messages[email]" class="form-control" placeholder="Email">
                                        </div>
                                        <div class="form-group">
                                            <input type="text" id="messages_subject" name="messages[subject]" class="form-control" placeholder="Subject">
                                        </div>
                                        <div class="form-group">
                                            <textarea placeholder="Leave Your Messages!" id="messages_messages" name="messages[messages]" rows="3" class="form-control"></textarea>
                                        </div>
                                        <input type="hidden" name="token" value="{{ csrf_token('form-messages') }}" />
                                        <button class="comment-btn">Submit Comment</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End contact section  -->

    <!-- Start google map -->
    <section id="google-map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d9529.175607108722!2d32.648451242162544!3d41.2108281211885!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x408354ac4492953f%3A0xab3b48ed0392a743!2sKarab%C3%BCk%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1576285801386!5m2!1str!2str" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </section>
    <!-- End google map -->

{% endblock %}




